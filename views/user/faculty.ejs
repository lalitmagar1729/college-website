<%- include("navbar.ejs") %>

  <style>
    .faculty-hero {
      background: linear-gradient(rgba(37, 99, 235, 0.9), rgba(124, 58, 237, 0.8));
      background-size: cover;
      background-position: center;
      color: white;
      padding: 80px 0;
      margin-bottom: 3rem;
    }

    .faculty-card {
      border: none;
      border-radius: 15px;
      background: #fff;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      overflow: hidden;
      height: 100%;
    }

    .faculty-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(67, 97, 238, 0.15);
    }

    .faculty-img-container {
      height: 350px;
      overflow: hidden;
      position: relative;
    }

    .faculty-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .faculty-card:hover .faculty-img {
      transform: scale(1.1);
    }

    .faculty-info {
      padding: 1.5rem;
    }

    .faculty-name {
      font-weight: 700;
      color: #111827;
      margin-bottom: 0.25rem;
    }

    .faculty-designation {
      color: #2563EB;
      font-weight: 600;
      font-size: 0.9rem;
      margin-bottom: 1rem;
      display: block;
    }

    .faculty-details {
      font-size: 0.9rem;
      color: #4b5563;
    }

    .faculty-details p {
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
    }

    .faculty-details i {
      width: 20px;
      color: #7C3AED;
      margin-right: 8px;
    }
  </style>

  <!-- Hero Section -->
  <section class="faculty-hero text-center">
    <div class="container">
      <h1 class="display-4 fw-bold mb-3">Our Distinguished Faculty</h1>
      <p class="lead fs-5 text-light opacity-75">Meet the mentors shaping the future of our students</p>
    </div>
  </section>

  <!-- Faculty Grid -->
  <section class="py-5 bg-light">
    <div class="container">

      <div class="row gy-4 <% if (facultyData.length % 3 !== 0) { %> justify-content-center <% } %> ">
        <% for( let i=0; i < facultyData.length; i++) { %>

          <div class="col-lg-4 col-md-6">
            <div class="faculty-card">
              <div class="faculty-img-container">
                <img src="images/<%= facultyData[i].faculty_photo %>" alt="<%= facultyData[i].faculty_name %>"
                  class="faculty-img">
              </div>

              <div class="faculty-info">
                <h4 class="faculty-name">
                  <%= facultyData[i].faculty_name %>
                </h4>
                <span class="faculty-designation">
                  <%= facultyData[i].faculty_designation %>
                </span>

                <div class="faculty-details">
                  <p><i class="fas fa-user-graduate"></i> <strong>Dept:</strong>
                    <%= facultyData[i].faculty_dept %>
                  </p>
                  <p><i class="fas fa-graduation-cap"></i> <strong>Qual:</strong>
                    <%= facultyData[i].faculty_qual %>
                  </p>
                  <p><i class="fas fa-briefcase"></i> <strong>Exp:</strong>
                    <%= facultyData[i].faculty_exp %>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <% } %>
      </div>


    </div>
  </section>

  <%- include("footer.ejs") %>