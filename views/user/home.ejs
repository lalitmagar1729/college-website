  <!-- Courses Section Styles -->
  <style>
    :root {
      --primary-color: #2563EB;
      --secondary-color: #7C3AED;
      --accent-color: #4cc9f0;
      --light-bg: #f8f9fa;
      --dark-text: #212529;
      --light-text: #6c757d;
      --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      --card-hover-shadow: 0 15px 40px rgba(37, 99, 235, 0.15);
      --transition: all 0.3s ease;
    }

    /* Custom CSS - Scoped to courses-section only */
    .courses-section {
      background-color: var(--light-bg);
      padding: 80px 0;
      position: relative;
      overflow: hidden;
      font-family: 'Poppins', sans-serif;
      color: var(--dark-text);
}

.courses-section::before {
  content: '';
  position: absolute;
  top: -100px;
  right: -100px;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(67, 97, 238, 0.05) 0%, rgba(67, 97, 238, 0) 70%);
  border-radius: 50%;
  z-index: 0;
}

.courses-section::after {
  content: '';
  position: absolute;
  bottom: -100px;
  left: -100px;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, rgba(76, 201, 240, 0.05) 0%, rgba(76, 201, 240, 0) 70%);
  border-radius: 50%;
  z-index: 0;
}

.courses-section .section-title {
  font-weight: 700;
  color: var(--secondary-color);
  position: relative;
  display: inline-block;
  margin-bottom: 20px;
  font-size: 2.5rem;
  z-index: 1;
}

.courses-section .section-title::after {
  content: '';
  position: absolute;
  width: 60px;
  height: 4px;
  background: var(--accent-color);
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 2px;
}

.courses-section .section-subtitle {
  color: var(--light-text);
  font-size: 1.1rem;
  max-width: 700px;
  margin: 0 auto 60px;
  line-height: 1.6;
  z-index: 1;
  position: relative;
}

.courses-section .course-card {
  border: none;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: var(--card-shadow);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  height: 100%;
  background: white;
  position: relative;
  z-index: 1;
}

.courses-section .course-card:hover {
  transform: translateY(-10px);
  box-shadow: var(--card-hover-shadow);
}

.courses-section .card-icon {
  width: 70px;
  height: 70px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 25px auto 20px;
  font-size: 28px;
  color: white;
  transition: var(--transition);
}

.courses-section .diploma-icon {
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
}

.courses-section .bachelor-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.courses-section .master-icon {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.courses-section .course-card:hover .card-icon {
  transform: scale(1.1) rotate(5deg);
}

.courses-section .card-header {
  background: transparent;
  border: none;
  padding: 0 20px 10px;
  font-weight: 700;
  font-size: 1.5rem;
  color: var(--dark-text);
  text-align: center;
}

.courses-section .card-body {
  padding: 0 25px 15px;
  text-align: center;
}

.courses-section .card-text {
  color: var(--light-text);
  line-height: 1.6;
  font-size: 0.95rem;
  margin-bottom: 25px;
}

.courses-section .course-features {
  list-style: none;
  padding: 0;
  margin: 0 0 25px;
  text-align: left;
}

.courses-section .course-features li {
  padding: 5px 0;
  color: var(--light-text);
  font-size: 0.9rem;
  position: relative;
  padding-left: 25px;
}

.courses-section .course-features li i {
  color: var(--primary-color);
  position: absolute;
  left: 0;
  top: 6px;
}

.courses-section .card-footer {
  background: transparent;
  border: none;
  padding: 0 25px 30px;
  text-align: center;
}

.courses-section .btn-view-more {
  background: var(--primary-color);
  border: none;
  color: white;
  padding: 10px 25px;
  border-radius: 50px;
  font-weight: 500;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.courses-section .btn-view-more::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.7s;
  z-index: -1;
}

.courses-section .btn-view-more:hover {
  background: var(--secondary-color);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
}

.courses-section .btn-view-more:hover::before {
  left: 100%;
}

.courses-section .courses-cta {
  text-align: center;
  margin-top: 70px;
  z-index: 1;
  position: relative;
}

.courses-section .btn-all-courses {
  background: transparent;
  border: 2px solid var(--primary-color);
  color: var(--primary-color);
  padding: 12px 35px;
  border-radius: 50px;
  font-weight: 600;
  transition: var(--transition);
}

.courses-section .btn-all-courses:hover {
  background: var(--primary-color);
  color: white;
  transform: translateY(-3px);
  box-shadow: 0 10px 20px rgba(67, 97, 238, 0.2);
}

.courses-section .course-card:hover .card-icon {
  transform: scale(1.1) rotate(5deg);
}

.course-card:hover{
  transform: translateY(-10px);
  box-shadow: var(--card-hover-shadow);
}

@media (max-width: 992px) {
  .courses-section .course-card {
    margin-bottom: 30px;
  }
}

@media (max-width: 768px) {
  .courses-section .section-title {
    font-size: 2rem;
  }

  .courses-section .section-subtitle {
    font-size: 1rem;
    padding: 0 15px;
  }
}
  </style>

