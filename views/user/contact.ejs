<!-- Contact Section -->
<section class="container my-5">
  <div class="text-center mb-5">
    <h2 class="fw-bold">Get in Touch</h2>
    <p class="text-muted">Weâ€™d love to hear from you. Reach out anytime.</p>
  </div>

  <div class="row g-4">
    <!-- Contact Form -->
    <div class="col-lg-6">
      <div class="contact-card p-4">
        <h5 class="fw-semibold mb-3">Contact Form</h5>
        <form action="/contact" method="post">

          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" placeholder="Enter your name">
          </div>

          <div class="mb-3">
            <label class="form-label">Email Address</label>
            <input type="email" class="form-control" placeholder="Enter your email">
          </div>

          <div class="mb-3">
            <label class="form-label">Message</label>
            <textarea class="form-control" rows="8" placeholder="Write your message"></textarea>
          </div>

          <button class="btn btn-primary w-100">
            <i class="bi bi-send-fill me-2"></i>Send Message
          </button>
        </form>
      </div>
    </div>

    <!-- Contact Details -->
    <div class="col-lg-6">
      <div class="contact-card p-4 mb-4">
        <h5 class="fw-semibold mb-4">College Information</h5>

        <div class="d-flex mb-3">
          <div class="icon-box me-3">
            <i class="bi bi-geo-alt-fill"></i>
          </div>
          <div>
            <h6 class="mb-1">Address</h6>
            <p class="text-muted mb-0">XYZ College, Pune, Maharashtra, India</p>
          </div>
        </div>

        <div class="d-flex mb-3">
          <div class="icon-box me-3">
            <i class="bi bi-telephone-fill"></i>
          </div>
          <div>
            <h6 class="mb-1">Phone</h6>
            <p class="text-muted mb-0">+91 98765 43210</p>
          </div>
        </div>

        <div class="d-flex">
          <div class="icon-box me-3">
            <i class="bi bi-envelope-fill"></i>
          </div>
          <div>
            <h6 class="mb-1">Email</h6>
            <p class="text-muted mb-0">info@college.edu</p>
          </div>
        </div>
      </div>

      <!-- Google Map -->
      <div class="contact-card p-2">
        <iframe
          src="https://www.google.com/maps?q=Pune%20Maharashtra&output=embed"
          width="100%"
          height="250"
          loading="lazy">
        </iframe>
      </div>
    </div>
  </div>
</section>

