<%- include("navbar.ejs") %>

  <style>
    .admission-hero {
      background: linear-gradient(rgba(37, 99, 235, 0.9), rgba(124, 58, 237, 0.8));
      background-size: cover;
      background-position: center;
      color: white;
      padding: 100px 0;
      margin-bottom: 3rem;
    }

    .process-card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      height: 100%;
      background: white;
      padding: 2rem;
      position: relative;
      overflow: hidden;
    }

    .process-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(67, 97, 238, 0.15);
    }

    .process-number {
      font-size: 4rem;
      font-weight: 800;
      color: rgba(37, 99, 235, 0.1);
      position: absolute;
      top: -10px;
      right: 10px;
      line-height: 1;
    }

    .req-list li {
      margin-bottom: 10px;
      position: relative;
      padding-left: 30px;
      list-style: none;
    }

    .req-list li::before {
      content: "\f00c";
      font-family: "Font Awesome 6 Free";
      font-weight: 900;
      color: #2563EB;
      position: absolute;
      left: 0;
      top: 2px;
    }

    .accordion-button:not(.collapsed) {
      color: #2563EB;
      background-color: rgba(37, 99, 235, 0.1);
    }

    .accordion-button:focus {
      box-shadow: 0 0 0 0.25rem rgba(37, 99, 235, 0.25);
    }
  </style>

  <section class="admission-hero text-center">
    <div class="container">
      <h1 class="display-3 fw-bold mb-4">Admissions <%= new Date().getFullYear() %>
      </h1>
      <p class="lead mb-4 fs-4">Your Future Starts Here. Join a community of innovators and leaders.</p>
      <a href="#apply-now" class="btn btn-light btn-lg px-5 py-3 fw-bold text-primary rounded-pill shadow">Apply Now</a>
    </div>
  </section>

  <section class="py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="section-title fw-bold">Admission Process</h2>
        <p class="text-muted">Simple 4-step guide to join Vertex Global College</p>
      </div>

      <div class="row gy-4">

        <% for (let i=0; i < stepsData.length; i++) { %>
          <div class="col-md-6 col-lg-3">
            <div class="process-card">
              <span class="process-number">0<%= i + 1 %></span>
              <div class="mb-3">
                <i class="<%= stepsData[i].step_icon %> fa-3x text-primary"></i>
              </div>
              <h4 class="fw-bold mb-3">
                <%= stepsData[i].step_title %>
              </h4>
              <p class="text-muted">
                <%= stepsData[i].step_description %>
              </p>
            </div>
          </div>
          <% } %>
      </div>

    </div>
  </section>

  <section class="py-5 bg-light">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <img
            src="https://images.unsplash.com/photo-1541339907198-e08756dedf3f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
            alt="Students" class="img-fluid rounded shadow-lg">
        </div>
        <div class="col-lg-6 ps-lg-5">
          <h2 class="section-title fw-bold mb-4 text-center">Eligibility Criteria</h2>

          <div class="mb-4">
            <h5 class="fw-bold text-primary mb-3">
              <i class="fas fa-file-alt me-2"></i>Diploma's Course
            </h5>
            <ul class="req-list">
              <% eligibilityData.forEach(item=> { %>
                <% if (item.criteria_type==='diploma' ) { %>
                  <li>
                    <%= item.criteria_text %>
                  </li>
                  <% } %>
                    <% }) %>
            </ul>
          </div>

          <div class="mb-4">
            <h5 class="fw-bold text-primary mb-3">
              <i class="fas fa-graduation-cap me-2"></i>Degree's Course
            </h5>
            <ul class="req-list">
              <% eligibilityData.forEach(item=> { %>
                <% if (item.criteria_type==='degree' ) { %>
                  <li>
                    <%= item.criteria_text %>
                  </li>
                  <% } %>
                    <% }) %>
            </ul>
          </div>

          <div class="mb-4">
            <h5 class="fw-bold text-primary mb-3">
              <i class="fas fa-university me-2"></i>Master's Course
            </h5>
            <ul class="req-list">
              <% eligibilityData.forEach(item=> { %>
                <% if (item.criteria_type==='master' ) { %>
                  <li>
                    <%= item.criteria_text %>
                  </li>
                  <% } %>
                    <% }) %>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Call to Action / Form -->
  <section id="apply-now" class="py-5">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="card shadow border-0">
            <div class="card-body p-5">
              <div class="text-center mb-4">
                <h3 class="fw-bold">Ready to Apply?</h3>
                <p class="text-muted">Start your application today. It only takes a few minutes.</p>
              </div>

              <form action="/save-admissions" method="POST">
                <div class="row g-3">
                  <div class="col-md-6">
                    <label for="full_name" class="form-label">Full Name</label>
                    <input type="text" name="applicant_full_name" class="form-control" id="full_name" placeholder="John Doe" required>
                  </div>
                  <div class="col-md-6">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" name="applicant_email" class="form-control" id="email" placeholder="john@example.com" required>
                  </div>
                  <div class="col-md-6">
                    <label for="mobile_number" class="form-label">Mobile Number</label>
                    <input type="number" name="applicant_mobile" pattern="[0-9]{10}" class="form-control" id="mobile_number" placeholder="987 654 3210" required>
                  </div>
                  <div class="col-md-6">
                    <label for="highest_qualification" class="form-label">Highest Qualification</label>
                    <select name="highest_qualification" class="form-select" id="highest_qualification" required>
                      <option selected disabled>Choose a qualification...</option>
                      <option value="ssc">SSC</option>
                      <option value="hsc">HSC</option>
                      <option value="diploma">Diploma</option>
                      <option value="bachelor">Bachelor's Degree</option>
                    </select>
                  </div>
                  <div class="col-12">
                    <label for="course_applied_for" class="form-label">Course Applied For</label>
                    <input type="text" name="course_applied_for" list="courses" class="form-control" id="course_applied_for" placeholder="Choose a course...">

                    <datalist id="courses" aria-autocomplete="off" ></datalist>
                  </div>

                  <div class="col-12">
                    <label for="academic_score" class="form-label">Percentage/CGPA</label>
                    <input type="text" name="academic_score" class="form-control" id="academic_score" placeholder="e.g., 85% or 8.5 CGPA" required>
                  </div>
                  <div class="col-12">
                    <label for="address" class="form-label">Address</label>
                    <textarea name="applicant_address" class="form-control" id="address" rows="4" placeholder="Your full address" required></textarea>
                  </div>
                  <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">Apply Now <i class="fas fa-paper-plane"></i></button>
                  </div>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
  const qualificationSelect = document.getElementById("highest_qualification");
  const coursesDatalist = document.getElementById("courses");

  const courseOptions = {
    ssc: [
      "Diploma of Electrical Engineering",
      "Diploma of Computer Engineering",
      "Diploma of Civil Engineering",
      "Diploma of Mechanical Engineering"
    ],

    hsc: [
      "Diploma of Electrical Engineering",
      "Diploma of Computer Engineering",
      "Diploma of Civil Engineering",
      "Diploma of Mechanical Engineering",
      "BE of Information Technology",
      "BE of Computer Science",
      "BE of Cyber Security",
      "BE of Artificial Intelligence and Machine Learning",
      "Bachelor of Computer Science",
      "Bachelor of Computer Application",
      "Bachelor of Science",
      "Bachelor of Bussiness Administration"
    ],

    diploma: [
      "BE of Information Technology",
      "BE of Computer Science",
      "BE of Cyber Security",
      "BE of Artificial Intelligence and Machine Learning"
    ],

    bachelor: [
      "ME of Computer Science",
      "ME of Cyber Security",
      "ME of Information Technology",
      "ME of Artificial Intelligence and Machine Learning",
      "Master of Computer Sceince",
      "Master of Computer Application",
      "Master of Computer Science",
      "Master of Bussiness Administration"
    ]
  };

  qualificationSelect.addEventListener("change", function () {
    const selectedQualification = this.value;

    // Clear old options
    coursesDatalist.innerHTML = "";

    if (courseOptions[selectedQualification]) {
      courseOptions[selectedQualification].forEach(course => {
        const option = document.createElement("option");
        option.value = course;
        coursesDatalist.appendChild(option);
      });
    }
  });
</script>


  <%- include("footer.ejs") %>