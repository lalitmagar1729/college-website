<%- include("admin-topbar.ejs") %>

  <div class="container-fluid py-4">
    <div class="row mb-4">
      <div class="col-12 text-center">
        <h3 class="fw-bold">Admission Process</h3>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-12">
        <a class="btn btn-primary" data-bs-toggle="collapse" href="#addStepCollapse" role="button">
          Add Steps
        </a>
      </div>
    </div>

    <div class="collapse" id="addStepCollapse">
      <div class="card">
        <div class="card-body">
          <form action="/admin/save-process" method="post" enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="step_title" class="form-label">Step Title</label>
                <input type="text" name="step_title" id="step_title" class="form-control" placeholder="Enter step title"
                  required>
              </div>

              <div class="col-md-6 mb-3">
                <label for="step_icon" class="form-label">Step Icon</label>
                <select name="step_icon" id="step_icon" class="form-control" required>
                  <option value="">--Select step icon--</option>
                  <option value="fas fa-file-alt">File & Form</option>
                  <option value="fas fa-check-circle">Check</option>
                  <option value="fas fa-list-ol">Merit</option>
                  <option value="fas fa-money-bill-wave">Payment & Confirmation</option>
                </select>
              </div>

              <div class="col-12 mb-3">
                <label for="step_description" class="form-label">Step Description</label>
                <textarea name="step_description" id="step_description" rows="3" class="form-control"
                  placeholder="Enter step description" required></textarea>
              </div>

              <div class="col-12 text-center">
                <button type="submit" class="btn btn-success px-4">
                  Add Step
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>S.No</th>
              <th>Title</th>
              <th>Icon</th>
              <th>Description</th>
              <th width="10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(typeof stepsData !="undefined" ) { %>
              <% for(let i=0; i<stepsData.length; i++) { %>
                <tr>
                  <td>
                    <%= i+1 %>
                  </td>
                  <td>
                    <%= stepsData[i].step_title %>
                  </td>
                  <td class="text-center text-primary fs-3"><i class="<%= stepsData[i].step_icon %>"></i></td>
                  <td>
                    <%= stepsData[i].step_description %>
                  </td>
                  <td>
                    <a href="/admin/edit-process/<%= stepsData[i].step_id %>" class="btn btn-warning btn-sm"><i
                        class="bi bi-pencil"></i></a>
                    <a href="/admin/delete-process/<%= stepsData[i].step_id %>"
                      onclick="return confirm('Are you sure you want to delete this step?')"
                      class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                  </td>
                </tr>
                <% } %>

                  <% }else{ %>
                    <tr>
                      <td colspan="5" class="text-center">No steps added yet</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-12">
        <a class="btn btn-primary mb-3" data-bs-toggle="collapse" href="#collapseEligibility" role="button"
          aria-expanded="false">
          Add Eligibility Criteria
        </a>

        <div class="collapse" id="collapseEligibility">
          <div class="card">
            <div class="card-body">
              <form action="/admin/save-eligibility" method="post">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="criteria_type" class="form-label">Criteria Type</label>
                    <select name="criteria_type" id="criteria_type" class="form-control" required>
                      <option value="">--Select criteria type--</option>
                      <option value="diploma">Diploma's Course</option>
                      <option value="degree">Degree's Course</option>
                      <option value="master">Master's Course</option>
                    </select>
                  </div>

                  <div class="col-md-6 mb-3">
                    <label for="criteria_icon" class="form-label">Criteria Icon</label>
                    <select name="criteria_icon" id="criteria_icon" class="form-control" required>
                      <option value="">--Select criteria icon--</option>
                      <option value="fas fa-file-alt">Diploma</option>
                      <option value="fas fa-graduation-cap">Degree</option>
                      <option value="fas fa-university">Master</option>
                    </select>
                  </div>

                  <div class="col-md-12 mb-3">
                    <label for="criteria_text" class="form-label">Criteria Text</label>
                    <input type="text" name="criteria_text" id="criteria_text" class="form-control"
                      placeholder="Enter criteria text" required>
                  </div>

                  <div class="col-12 text-center">
                    <button type="submit" class="btn btn-success px-4">
                      Add Eligibility Criteria
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>S.No</th>
              <th>Criteria Type</th>
              <th>Icon</th>
              <th>Criteria Text</th>
              <th width="10%">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(typeof eligibilityData !="undefined" ) { %>
              <% for(let i=0; i<eligibilityData.length; i++) { %>
                <tr>
                  <td>
                    <%= i+1 %>
                  </td>
                  <td>
                    <%= eligibilityData[i].criteria_type.charAt(0).toUpperCase() + eligibilityData[i].criteria_type.slice(1) %>
                  </td>
                  <td class="text-center text-primary fs-3"><i class="<%= eligibilityData[i].criteria_icon %>"></i></td>
                  <td>
                    <%= eligibilityData[i].criteria_text %>
                  </td>
                  <td>
                    <a href="/admin/edit-eligibility/<%= eligibilityData[i].criteria_id %>"
                      class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                    <a href="/admin/delete-eligibility/<%= eligibilityData[i].criteria_id %>"
                      onclick="return confirm('Are you sure you want to delete this eligibility criteria?')"
                      class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                  </td>
                </tr>
                <% } %>
                  <% }else{ %>
                    <tr>
                      <td colspan="5" class="text-center">No eligibility criteria added yet</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include("admin-footer.ejs") %>