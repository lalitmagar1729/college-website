<%- include("admin-topbar.ejs") %>

  <div class="container-fluid py-4">
    <div class="row mb-4">
      <div class="col-12">
        <h2 class="section-title fw-bold text-center">Edit Accreditation</h2>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-6">
        <form action="/admin/update-accreditation" method="post">
          <input type="hidden" name="accreditation_id" value="<%= accreditationData[0].accreditation_id %>">

          <div class="mb-3">
            <label class="form-label">Accreditation Title</label>
            <input type="text" class="form-control" name="accreditation_title"
              value="<%= accreditationData[0].accreditation_title %>" required>
          </div>

          <div class="mb-4">
            <label class="form-label">Accreditation Icon</label>
            <select class="form-select" name="accreditation_icon" required>
              <option value="">-- choose --</option>

              <option value="fas fa-university" <%=accreditationData[0].accreditation_icon==='fas fa-university'
                ? 'selected' : '' %>>
                University
              </option>

              <option value="fas fa-award" <%=accreditationData[0].accreditation_icon==='fas fa-award' ? 'selected' : ''
                %>>
                Award
              </option>

              <option value="fas fa-globe-americas" <%=accreditationData[0].accreditation_icon==='fas fa-globe-americas'
                ? 'selected' : '' %>>
                Global
              </option>

              <option value="fas fa-certificate" <%=accreditationData[0].accreditation_icon==='fas fa-certificate'
                ? 'selected' : '' %>>
                Certificate
              </option>
            </select>
          </div>


          <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">
              Update Accreditation
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include("admin-footer.ejs") %>