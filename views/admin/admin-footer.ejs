
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // small helpers
    document.getElementById('year').innerText = new Date().getFullYear();

    const sidebar = document.getElementById('sidebar');
    const toggle = document.getElementById('toggleSidebar');
    const mobileToggle = document.getElementById('mobileToggle');

    toggle.addEventListener('click', () => sidebar.classList.toggle('collapsed'));
    mobileToggle.addEventListener('click', () => {
      sidebar.classList.toggle('show');
      document.body.classList.toggle('sidebar-open');
    });

    // Charts (Chart.js) -- demo data
    const attendanceCtx = document.getElementById('attendanceChart').getContext('2d');
    new Chart(attendanceCtx, {
      type: 'bar',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
        datasets: [{ label: 'Attendance %', data: [92, 88, 85, 90, 87, 80, 94], tension: .4 }]
      },
      options: { responsive: true, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true, max: 100 } } }
    });

    const doughCtx = document.getElementById('doughnut').getContext('2d');
    new Chart(doughCtx, { type: 'doughnut', data: { labels: ['Completed', 'Remaining'], datasets: [{ data: [82, 18] }] }, options: { plugins: { legend: { display: false } }, cutout: '70%' } });

    const enrollCtx = document.getElementById('enrollChart').getContext('2d');
    new Chart(enrollCtx, {
      type: 'line',
      data: { labels: ['Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov'], datasets: [{ label: 'Enrollments', data: [34, 48, 56, 63, 72, 85], tension: .35, fill: true }] },
      options: { responsive: true, plugins: { legend: { display: false } } }
    });

    // Add student (simple demo, client-side only)
    document.getElementById('saveStudent').addEventListener('click', (e) => {
      e.preventDefault();
      const name = document.getElementById('sName').value.trim();
      const email = document.getElementById('sEmail').value.trim();
      const phone = document.getElementById('sPhone').value.trim();
      const course = document.getElementById('sCourse').value;
      if (!name || !email) return alert('Please enter name and email');
      const tbody = document.getElementById('studentTable');
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class=\"d-flex align-items-center gap-2\"><img src=\"https://i.pravatar.cc/40?u=${Math.random()}\" class=\"avatar-sm\" alt=\"\"> <div>${name} <div class=\"small text-muted\">${email}</div></div></td>
        <td>${course}</td>
        <td>${phone || 'â€”'}</td>
        <td><span class=\"badge bg-success\">Active</span></td>
        <td>${new Date().toISOString().slice(0, 10)}</td>
      `;
      tbody.prepend(tr);
      // close modal
      const modal = bootstrap.Modal.getInstance(document.getElementById('addStudent'));
      modal.hide();
      document.getElementById('studentForm').reset();
    });

    // Simple live search for students table
    document.getElementById('globalSearch').addEventListener('input', (e) => {
      const q = e.target.value.toLowerCase();
      document.querySelectorAll('#studentTable tr').forEach(tr => {
        tr.style.display = tr.innerText.toLowerCase().includes(q) ? '' : 'none';
      });
    });
  </script>
