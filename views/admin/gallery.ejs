<%- include("admin-topbar.ejs") %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="text-center mb-4">Add Gallery</h2>
    </div>
    <div class="col-lg-12">
      <form action="/admin/save-gallery" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="gallery_image" class="form-label">Gallery Image:</label>
          <input type="file" class="form-control" id="gallery_image" name="gallery_image" required>
        </div>
        <div class="col-12 text-center">
          <button type="submit" class="btn btn-success text-center">Add Gallery</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-12">
      <table class="table table-bordered table-hover text-center">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(galleryData.length > 0) { %>
            <% for(let i=0; i<galleryData.length; i++) { %>
              <tr>
                <td><img src="/images/<%= galleryData[i].gallery_image %>" alt="Gallery Image" class="img-fluid" style="max-height: 100px;"></td>
                <td>
                  <a href="/admin/delete-gallery/<%= galleryData[i].gallery_id %>" onclick="return confirm('Are you sure you want to delete this gallery image?')" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
              </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="2" class="text-center">No gallery images Available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("admin-footer.ejs") %>